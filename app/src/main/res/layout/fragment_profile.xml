<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/drac_bg"
        tools:context=".ui.ProfileFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- User Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="100sp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/gradient_purple_cyan"
                        app:civ_border_color="#00FFFFFF"
                        app:civ_border_width="4dp" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/user1name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Hugh Jackman"
                    android:textColor="@color/drac_purple"
                    android:textSize="25sp"
                    app:fontFamily="@font/fira_code_semibold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Team Members"
                    android:textColor="@color/drac_gray"
                    android:textSize="18sp"
                    app:fontFamily="@font/fira_code_medium"
                    tools:ignore="HardcodedText" />

                <!-- Team Profiles -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/drac_dark"
                    app:cardCornerRadius="20dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:id="@+id/user2card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">
                            <!-- User Avatar -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                app:cardCornerRadius="100sp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/picTeammate1"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/gradient_yellow_pink"
                                    app:civ_border_color="#00FFFFFF"
                                    app:civ_border_width="3dp"
                                    tools:ignore="TooDeepLayout" />
                            </androidx.cardview.widget.CardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/user2name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fira_code"
                                android:text="Lorem"
                                android:textAlignment="center"
                                android:textColor="@color/drac_white"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user3card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">
                            <!-- User Avatar -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                app:cardCornerRadius="100sp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/picTeammate2"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/gradient_yellow_pink"
                                    app:civ_border_color="#00FFFFFF"
                                    app:civ_border_width="3dp"
                                    tools:ignore="TooDeepLayout" />
                            </androidx.cardview.widget.CardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/user3name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fira_code"
                                android:text="Ipsum"
                                android:textAlignment="center"
                                android:textColor="@color/drac_white"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user4card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">
                            <!-- User Avatar -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                app:cardCornerRadius="100sp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/picTeammate3"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@drawable/gradient_yellow_pink"
                                    app:civ_border_color="#00FFFFFF"
                                    app:civ_border_width="3dp"
                                    tools:ignore="TooDeepLayout" />
                            </androidx.cardview.widget.CardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/user4name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/fira_code"
                                android:text="Dolor"
                                android:textAlignment="center"
                                android:textColor="@color/drac_white"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                    </GridLayout>

                </androidx.cardview.widget.CardView>

                <!--  -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="90dp">

                    <!--GoogleButton Card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/google_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/drac_dark"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_google_logo"
                                tools:ignore="ContentDescription" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/google_sign_in_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/drac_white"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/drac_dark"
                        app:cardCornerRadius="20dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="10dp"
                            tools:ignore="UselessParent">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="10dp"
                                android:text="Edit Profile"
                                android:textAlignment="center"
                                android:textColor="@color/drac_gray"
                                android:textSize="20sp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dividerColor="@color/drac_bg"
                                app:dividerInsetEnd="15dp"
                                app:dividerInsetStart="15dp"
                                app:dividerThickness="2dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="10dp"
                                android:text="Scan QR Code"
                                android:textAlignment="center"
                                android:textColor="@color/drac_gray"
                                android:textSize="20sp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dividerColor="@color/drac_bg"
                                app:dividerInsetEnd="15dp"
                                app:dividerInsetStart="15dp"
                                app:dividerThickness="2dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="10dp"
                                android:text="Contact Us"
                                android:textAlignment="center"
                                android:textColor="@color/drac_gray"
                                android:textSize="20sp"
                                tools:ignore="HardcodedText" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:dividerColor="@color/drac_bg"
                                app:dividerInsetEnd="15dp"
                                app:dividerInsetStart="15dp"
                                app:dividerThickness="2dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/logoutBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingVertical="10dp"
                                android:text="Logout"
                                android:textAlignment="center"
                                android:textColor="@color/drac_gray"
                                android:textSize="20sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
